<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Mirasvit_Assistant::assistant" title="AI Assistant by Mirasvit">
                        <resource id="Mirasvit_Assistant::assistant_prompt" title="Prompts" sortOrder="10"/>
                        <resource id="Mirasvit_Assistant::assistant_rule" title="Automation Rules" sortOrder="20"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mirasvit_Assistant::assistant_config" title="AI Assistant Settings" sortOrder="1000"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
